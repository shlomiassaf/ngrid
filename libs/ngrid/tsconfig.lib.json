{
  "extends": "../../tsconfig.lib.json",
  "compilerOptions": {
    "outDir": "../../out-tsc",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "types": ["dev-mode-types"],
    "lib": ["dom", "es2015"]
  },
  "exclude": [
    "src/__test-runners/*.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "karma.conf.ts"
  ]
}
