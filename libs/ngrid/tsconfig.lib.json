{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "paths": {
      "@pebula/*": ["dist/@pebula/*"]
    },
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": ["dev-mode-types"]
  },
  "exclude": [
    "src/__test-runners/*.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "karma.conf.ts"
  ]
}
