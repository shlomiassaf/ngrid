{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "",
  "projects": {
    "ngrid-demo-app": {
      "root": "apps/ngrid-demo-app/",
      "sourceRoot": "apps/ngrid-demo-app/src",
      "projectType": "application",
      "prefix": "pbl",
      "schematics": {
        "@nrwl/schematics:component": {
          "styleext": "scss"
        }
      },
      "architect": {
        "build": {
          "builder": "ngx-build-plus:build",
          "options": {
            "aot": false,
            "plugin": "~apps/ngrid-demo-app/ngx-build-plus-plugin",
            "outputPath": "dist/browser",
            "index": "apps/ngrid-demo-app/src/index.html",
            "main": "apps/ngrid-demo-app/src/main.ts",
            "polyfills": "apps/ngrid-demo-app/src/polyfills.ts",
            "tsConfig": "apps/ngrid-demo-app/tsconfig.app.json",
            "assets": [
              "apps/ngrid-demo-app/src/favicon.ico",
              "apps/ngrid-demo-app/src/google1a0455c97ead32c8.html",
              "apps/ngrid-demo-app/src/assets"
            ],
            "styles": [
              "apps/ngrid-demo-app/src/styles/main.scss"
            ],
            "scripts": [
              {
                "input": "node_modules/document-register-element/build/document-register-element.js"
              }
            ],
            "webWorkerTsConfig": "apps/ngrid-demo-app/tsconfig.worker.json",
            "allowedCommonJsDependencies": [
              "country-data",
              "currency-symbol-map",
              "faker"
            ]
          },
          "configurations": {
            "production": {
              "aot": true,
              "fileReplacements": [
                {
                  "replace": "apps/ngrid-demo-app/src/environments/environment.ts",
                  "with": "apps/ngrid-demo-app/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "ngx-build-plus:dev-server",
          "options": {
            "browserTarget": "ngrid-demo-app:build",
            "port": 4201,
            "plugin": "~apps/ngrid-demo-app/ngx-build-plus-plugin"
          },
          "configurations": {
            "production": {
              "browserTarget": "ngrid-demo-app:build:production"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "apps/ngrid-demo-app/src/__test-runners/karma-test.ts",
            "tsConfig": "apps/ngrid-demo-app/tsconfig.spec.karma.json",
            "karmaConfig": "apps/ngrid-demo-app/karma.conf.js",
            "polyfills": "apps/ngrid-demo-app/src/polyfills.ts",
            "styles": [
              "apps/ngrid-demo-app/src/__test-runners/main-test.scss"
            ],
            "scripts": [],
            "assets": []
          },
          "configurations": {
            "ci": {
              "watch": false,
              "progress": false,
              "browsers": "ChromeHeadlessCI"
            }
          }
        },
        "testJest": {
          "builder": "@nrwl/jest:jest",
          "options": {
            "jestConfig": "apps/ngrid-demo-app/jest.config.js",
            "passWithNoTests": true
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "apps/ngrid-demo-app/tsconfig.app.json",
              "apps/ngrid-demo-app/tsconfig.spec.json",
              "apps/ngrid-demo-app/tsconfig.worker.json",
              "apps/ngrid-demo-app/tsconfig.spec.json",
              "apps/ngrid-demo-app/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**",
              "!apps/ngrid-demo-app/**"
            ]
          }
        },
        "server": {
          "builder": "./tools/ngx-build-plus.server:server",
          "options": {
            "plugin": "~apps/ngrid-demo-app/ngx-build-plus-plugin",
            "outputPath": "dist/server",
            "main": "apps/ngrid-demo-app/src/main.server.ts",
            "tsConfig": "apps/ngrid-demo-app/tsconfig.server.json"
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "apps/ngrid-demo-app/src/environments/environment.ts",
                  "with": "apps/ngrid-demo-app/src/environments/environment.prod.ts"
                }
              ],
              "sourceMap": false,
              "optimization": {
                "scripts": false,
                "styles": true
              }
            }
          }
        }
      }
    },
    "ngrid-demo-app-e2e": {
      "root": "apps/ngrid-demo-app-e2e",
      "sourceRoot": "apps/ngrid-demo-app-e2e/src",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@nrwl/cypress:cypress",
          "options": {
            "cypressConfig": "apps/ngrid-demo-app-e2e/cypress.json",
            "tsConfig": "apps/ngrid-demo-app-e2e/tsconfig.e2e.json",
            "devServerTarget": "ngrid-demo-app:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "ngrid-demo-app:serve:production"
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "apps/ngrid-demo-app-e2e/tsconfig.e2e.json"
            ],
            "exclude": [
              "**/node_modules/**",
              "!apps/ngrid-demo-app-e2e/**/*"
            ]
          }
        }
      }
    },
    "ngrid": {
      "root": "libs/ngrid",
      "sourceRoot": "libs/ngrid/src",
      "projectType": "library",
      "prefix": "pbl",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "architect": {
        "build": {
          "builder": "ng-cli-packagr-tasks:build",
          "options": {
            "tsConfig": "libs/ngrid/tsconfig.lib.json",
            "project": "libs/ngrid/ng-package.json",
            "tasks": {
              "config": "tools/ng-packagr.transformers/ngrid.transformers.ts",
              "tsConfig": "tools/tsconfig.json",
              "data": {
                "copyFile": {
                  "assets": [
                    {
                      "glob": "README.md",
                      "input": ".",
                      "output": "dist/@pebula/ngrid"
                    },
                    {
                      "glob": "LICENSE",
                      "input": ".",
                      "output": "dist/@pebula/ngrid"
                    }
                  ]
                },
                "sassBundle": {
                  "entries": [
                    {
                      "glob": "_theming.scss",
                      "input": "libs/ngrid",
                      "output": "dist/@pebula/ngrid"
                    }
                  ]
                },
                "sassCompile": {
                  "entries": [
                    {
                      "glob": "*.scss",
                      "input": "libs/ngrid/src/themes/prebuilt",
                      "output": "dist/@pebula/ngrid/themes"
                    }
                  ]
                }
              }
            }
          },
          "configurations": {
            "production": {
              "tsConfig": "libs/ngrid/tsconfig.lib.prod.json",
              "project": "libs/ngrid/ng-package.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "libs/ngrid/src/__test-runners/karma-test.ts",
            "tsConfig": "libs/ngrid/tsconfig.spec.karma.json",
            "karmaConfig": "libs/ngrid/karma.conf.js"
          },
          "configurations": {
            "ci": {
              "watch": false,
              "progress": false,
              "browsers": "ChromeHeadlessCI"
            }
          }
        },
        "testJest": {
          "builder": "@nrwl/jest:jest",
          "options": {
            "jestConfig": "libs/ngrid/jest.config.js",
            "passWithNoTests": true
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "libs/ngrid/tsconfig.lib.json",
              "libs/ngrid/tsconfig.spec.json",
              "libs/ngrid/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**",
              "!libs/ngrid/**/*"
            ]
          }
        }
      }
    },
    "ngrid-material": {
      "root": "libs/ngrid-material",
      "sourceRoot": "libs/ngrid-material/src",
      "projectType": "library",
      "prefix": "pbl",
      "schematics": {
        "@nrwl/schematics:component": {
          "styleext": "scss"
        }
      },
      "architect": {
        "build": {
          "builder": "ng-cli-packagr-tasks:build",
          "options": {
            "tsConfig": "libs/ngrid-material/tsconfig.lib.json",
            "project": "libs/ngrid-material/ng-package.json",
            "tasks": {
              "config": "tools/ng-packagr.transformers/ngrid-material.transformers.ts",
              "tsConfig": "tools/tsconfig.json",
              "data": {
                "copyFile": {
                  "assets": [
                    {
                      "glob": "README.md",
                      "input": ".",
                      "output": "dist/@pebula/ngrid-material"
                    }
                  ]
                },
                "sassBundle": {
                  "entries": [
                    {
                      "glob": "_theming.scss",
                      "input": "libs/ngrid-material",
                      "output": "dist/@pebula/ngrid-material"
                    }
                  ]
                },
                "sassCompile": {
                  "entries": [
                    {
                      "glob": "*.scss",
                      "input": "libs/ngrid-material/src/themes/prebuilt",
                      "output": "dist/@pebula/ngrid-material/themes"
                    }
                  ]
                }
              }
            }
          },
          "configurations": {
            "production": {
              "tsConfig": "libs/ngrid-material/tsconfig.lib.prod.json",
              "project": "libs/ngrid-material/ng-package.prod.json"
            }
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "options": {
            "jestConfig": "libs/ngrid-material/jest.config.js",
            "passWithNoTests": true
          },
          "configurations": {
            "ci": {
              "watch": false,
              "progress": false,
              "browsers": "ChromeHeadlessCI"
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "libs/ngrid-material/tsconfig.lib.json",
              "libs/ngrid-material/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**",
              "!libs/ngrid-material/**/*"
            ]
          }
        }
      }
    },
    "ngrid-cypress": {
      "root": "libs/ngrid-cypress",
      "sourceRoot": "libs/ngrid-cypress/src",
      "projectType": "library",
      "prefix": "pbl",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "architect": {
        "build": {
          "builder": "ng-cli-packagr-tasks:build",
          "options": {
            "tsConfig": "libs/ngrid-cypress/tsconfig.lib.json",
            "project": "libs/ngrid-cypress/ng-package.json",
            "tasks": {
              "config": "tools/ng-packagr.transformers/ngrid-cypress.transformers.ts",
              "tsConfig": "tools/tsconfig.json",
              "data": {
                "copyFile": {
                  "assets": [
                    {
                      "glob": "**/*.d.ts",
                      "input": "libs/ngrid-cypress/src",
                      "output": "dist/@pebula/ngrid-cypress/"
                    },
                    {
                      "glob": "README.md",
                      "input": ".",
                      "output": "dist/@pebula/ngrid-cypress"
                    },
                    {
                      "glob": "LICENSE",
                      "input": ".",
                      "output": "dist/@pebula/ngrid-cypress"
                    }
                  ]
                },
                "nodeLib": {
                  "compilerOptions": {
                    "sourceMap": false,
                    "inlineSourceMap": true,
                    "inlineSources": true
                  }
                }
              }
            }
          },
          "configurations": {
            "production": {
              "tsConfig": "libs/ngrid-cypress/tsconfig.lib.prod.json",
              "project": "libs/ngrid-cypress/ng-package.prod.json"
            }
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "options": {
            "jestConfig": "libs/ngrid-cypress/jest.config.js",
            "passWithNoTests": true
          },
          "configurations": {
            "ci": {
              "watch": false,
              "progress": false,
              "browsers": "ChromeHeadlessCI"
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "libs/ngrid-cypress/tsconfig.lib.json",
              "libs/ngrid-cypress/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**",
              "!libs/ngrid-cypress/**/*"
            ]
          }
        }
      }
    }
  },
  "cli": {
    "warnings": {
      "versionMismatch": false
    },
    "defaultCollection": "@nrwl/angular"
  },
  "defaultProject": "ngrid-demo-app",
  "schematics": {
    "@nrwl/angular:application": {
      "unitTestRunner": "jest",
      "e2eTestRunner": "cypress"
    },
    "@nrwl/angular:library": {
      "unitTestRunner": "jest"
    },
    "@nrwl/schematics:node-application": {
      "framework": "express"
    }
  }
}
