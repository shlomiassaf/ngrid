{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "NG SERVE - DEBUG",
      "program": "${workspaceFolder}/node_modules/.bin/ng",
      "args": [
        "serve"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "NG BUILD - DEBUG",
      "program": "${workspaceFolder}/node_modules/.bin/ng",
      "args": [
        "build",
        "ngrid",
        "--prod"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "NX SCHEMATIC - DEBUG",
      "program": "${workspaceFolder}/node_modules/.bin/nx",
      "cwd": "${workspaceFolder}",
      "args": [
        "workspace-schematic",
        "example-module",
        "features/column/CellEdit",
        "--add",
        "MyTestRun"
      ]
    },
    {
      "name": "ng serve - attach",
      "type": "chrome",
      "request": "attach",
      "urlFilter": "http://localhost:4201*",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack:/*": "${webRoot}/*"
      },
      "port": 9222
    },
    {
      "name": "ng test",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:9876/debug.html",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "ng e2e",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/protractor/bin/protractor",
      "protocol": "inspector",
      "args": ["${workspaceFolder}/protractor.conf.js"]
    },
    {
      "name": "[Node] Current TS File",
      "type": "node",
      "request": "launch",
      "args": [ "${fileBasename}" ],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "cwd": "${fileDirname}",
      "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "[Node] Current JS File",
      "type": "node",
      "request": "launch",
      "args": [ "${relativeFile}" ],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    }
  ]
}
